{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "types": ["@playwright/test", "node"],
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ES2022",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "./**/*.ts",
    "./**/*.spec.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
